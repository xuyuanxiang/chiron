{
  "name": "chiron",
  "description": "Chiron framework development kits",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "lerna run start --parallel --concurrency 3",
    "build": "lerna run build --stream",
    "precommit": "lint-staged"
  },
  "engines": {
    "node": ">= 8"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^1.1.2",
    "lerna": "^3.4.3",
    "lint-staged": "^7.3.0",
    "prettier": "1.14.3"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
