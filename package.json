{
  "name": "chiron",
  "description": "Chiron framework development kits",
  "private": true,
  "license": "MIT",
  "scripts": {
    "clean": "lerna clean",
    "test": "lerna run test --stream --scope chiron-*-plugin",
    "build": "lerna run build --parallel --concurrency 4 --scope chiron-*",
    "ls": "lerna list"
  },
  "engines": {
    "node": ">= 8"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^1.1.2",
    "lerna": "^3.4.3",
    "lint-staged": "^7.3.0",
    "prettier": "1.14.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
