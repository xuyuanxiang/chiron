{
  "name": "chiron-cli",
  "version": "2.0.0-beta.0",
  "license": "MIT",
  "bin": {
    "chiron": "./lib/index.js"
  },
  "files": [
    "lib",
    "example"
  ],
  "engines": {
    "node": ">= 8.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.1.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "acorn": "^5.6.2",
    "acorn-dynamic-import": "^3.0.0",
    "babel-loader": "^8.0.4",
    "chalk": "^2.4.1",
    "connect-history-api-fallback": "^1.5.0",
    "cross-spawn": "^6.0.5",
    "css-loader": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "koa-connect": "^2.0.1",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.4.4",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.1.1",
    "sade": "^1.4.1",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "webpack": "^4.20.2",
    "webpack-chain": "^5.0.0",
    "webpack-command": "^0.4.1",
    "webpack-serve": "^2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/acorn": "^4.0.3",
    "@types/cross-spawn": "^6.0.0",
    "@types/jest": "^23.3.5",
    "@types/node": "8.x",
    "@types/webpack": "^4.4.17",
    "@types/webpack-serve": "^2.0.0",
    "babel-jest": "^23.6.0",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "jest-spec-reporter": "^1.0.5",
    "rimraf": "^2.6.2",
    "typescript": "^3.1.3"
  },
  "scripts": {
    "clean": "rimraf lib",
    "prebuild": "yarn clean",
    "prewatch": "yarn clean",
    "test": "cross-env NODE_ENV=test BABEL_ENV=test jest -u",
    "watch": "cross-env NODE_ENV=development tsc -w",
    "build": "cross-env NODE_ENV=production tsc"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8.0.0"
          }
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          "@babel/preset-typescript"
        ]
      }
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "testRegex": "(src/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.tsx?$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.spec.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "reporters": [
      "default",
      "jest-spec-reporter"
    ]
  }
}
