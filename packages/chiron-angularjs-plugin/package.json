{
  "name": "chiron-angularjs-plugin",
  "version": "2.0.0-beta.0",
  "license": "MIT",
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "jsnext:main": "lib/index.esm.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">= 8.0.0"
  },
  "scripts": {
    "clean": "rimraf lib",
    "prebuild": "yarn clean",
    "prewatch": "yarn clean",
    "test": "cross-env NODE_ENV=test BABEL_ENV=test jest -u",
    "watch": "cross-env NODE_ENV=development BABEL_ENV=development rollup -c -w",
    "build": "cross-env NODE_ENV=production BABEL_ENV=production rollup -c && tsc --emitDeclarationOnly"
  },
  "dependencies": {
    "angular": "^1.7.5",
    "html-loader": "^0.5.5"
  },
  "peerDependencies": {
    "chiron-cli": "*",
    "webpack-chain": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/angular": "^1.6.51",
    "@types/node": "8.x",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.6.0",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "jest-spec-reporter": "^1.0.5",
    "rimraf": "^2.6.2",
    "rollup": "^0.66.6",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript": "^1.0.0",
    "typescript": "^3.1.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8.0.0"
          },
          "modules": false
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "8.0.0"
              }
            }
          ],
          "@babel/preset-typescript"
        ]
      }
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "testRegex": "(src/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.tsx?$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.spec.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "reporters": [
      "default",
      "jest-spec-reporter"
    ]
  }
}
