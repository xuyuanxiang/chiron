{
  "name": "chiron-web",
  "version": "1.0.0-beta.0",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development BABEL_ENV=development webpack-serve --content app --port 4000 --log-level info",
    "build": "cross-env NODE_ENV=production BABEL_ENV=production webpack"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-rc.1",
    "chiron-core": "^1.0.0-beta.0",
    "chiron-web-compat": "^1.0.0-beta.0",
    "chiron-wx-compat": "^1.0.0-beta.0",
    "preact": "^8.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-rc.1",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "@babel/preset-react": "^7.0.0-rc.1",
    "@babel/preset-typescript": "^7.0.0-rc.1",
    "@types/node": "8.x",
    "babel-core": "^7.0.0-0",
    "babel-loader": "^8.0.0-beta",
    "connect-history-api-fallback": "^1.5.0",
    "cross-env": "^5.2.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "koa-connect": "^2.0.1",
    "preact-compat": "^3.18.2",
    "source-map-loader": "^0.2.3",
    "typescript": "^3.0.1",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.5",
    "webpack-command": "^0.4.1",
    "webpack-serve": "^2.0.2"
  },
  "browserslist": [
    "android >= 4.2",
    "ios >= 9.3"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry"
        }
      ],
      [
        "@babel/preset-react",
        {
          "pragma": "h"
        }
      ],
      [
        "@babel/preset-typescript",
        {
          "jsxPragma": "h"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import"
    ],
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "8.0.0"
              }
            }
          ]
        ]
      }
    }
  }
}
