{
  "name": "chiron-wx-compat",
  "version": "1.0.0-beta.0",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "jsnext:main": "lib/index.esm.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "prebuild": "yarn clean",
    "dev": "cross-env NODE_ENV=development tsc -w",
    "test:watch": "cross-env NODE_ENV=test BABEL_ENV=test jest -w",
    "test": "cross-env NODE_ENV=test BABEL_ENV=test jest -u",
    "build": "cross-env NODE_ENV=production BABEL_ENV=production rollup -c && tsc --emitDeclarationOnly"
  },
  "dependencies": {
    "chiron-core": "^1.0.0-beta.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-rc.1",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "@babel/preset-typescript": "^7.0.0-rc.1",
    "@types/jest": "^23.3.1",
    "@types/lodash-es": "^4.17.1",
    "@types/node": "8.x",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.0-beta.4",
    "cross-env": "^5.2.0",
    "jest": "^23.4.2",
    "jest-spec-reporter": "^1.0.4",
    "lodash-es": "^4.17.10",
    "rimraf": "^2.6.2",
    "rollup": "^0.64.1",
    "rollup-plugin-babel": "^4.0.0-beta.8",
    "rollup-plugin-commonjs": "^9.1.5",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "typescript": "^3.0.1"
  },
  "browserslist": [
    "> 0.5% in CN"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import"
    ],
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "8.0.0"
              }
            }
          ]
        ]
      }
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "node"
    ],
    "testEnvironment": "jsdom",
    "testRegex": "(src/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "transform": {
      "^.+\\.ts$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/__tests__/**",
      "!**/__mocks__/**",
      "!**/*.spec.ts",
      "!**/*.d.ts"
    ],
    "reporters": [
      "default",
      "jest-spec-reporter"
    ]
  }
}
