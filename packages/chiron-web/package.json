{
  "name": "chiron-web",
  "version": "1.0.0-beta.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development BABEL_ENV=development webpack-serve --port 3000 --open",
    "build": "cross-env NODE_ENV=production BABEL_ENV=production webpack"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "babel-loader": "^8.0.2",
    "clean-webpack-plugin": "^0.1.19",
    "html-webpack-plugin": "^3.2.0",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.17.2",
    "webpack-command": "^0.4.1",
    "webpack-serve": "^2.0.2"
  },
  "browserslist": [
    "ie > 9",
    "> 0.25% in CN"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env",
      [
        "@babel/preset-react",
        {
          "pragma": "h"
        }
      ],
      [
        "@babel/preset-typescript",
        {
          "jsxPragma": "h"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import"
    ],
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "8.0.0"
              }
            }
          ]
        ]
      },
      "production": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "useBuiltIns": "usage"
            }
          ]
        ]
      }
    }
  }
}
