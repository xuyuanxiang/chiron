{
  "name": "chiron-cli",
  "version": "1.0.0-beta.0",
  "license": "MIT",
  "bin": {
    "chiron": "index.js"
  },
  "files": [
    "lib",
    "index.js"
  ],
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "clean": "rimraf lib",
    "prebuild": "yarn clean",
    "prewatch": "yarn clean",
    "test": "cross-env NODE_ENV=test BABEL_ENV=test jest -u",
    "watch": "cross-env NODE_ENV=development BABEL_ENV=development rollup -c -w",
    "build": "cross-env NODE_ENV=production BABEL_ENV=production rollup -c"
  },
  "dependencies": {

  },
  "devDependencies": {

  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8.0.0"
          },
          "modules": false
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import"
    ],
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env"
        ]
      },
      "production": []
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "testRegex": "(src/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.tsx?$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.spec.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "reporters": [
      "default",
      "jest-spec-reporter"
    ]
  }
}
