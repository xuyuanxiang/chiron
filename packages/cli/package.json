{
  "name": "chiron-cli",
  "version": "1.0.0-beta.0",
  "license": "MIT",
  "bin": {
    "chiron": "index.js"
  },
  "files": [
    "lib",
    "index.js"
  ],
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "clean": "rimraf lib",
    "prebuild": "yarn clean",
    "prewatch": "yarn clean",
    "test": "cross-env NODE_ENV=test BABEL_ENV=test jest -u",
    "watch": "cross-env NODE_ENV=development tsc -w",
    "build": "cross-env NODE_ENV=production BABEL_ENV=production rollup -c"
  },
  "dependencies": {
    "chiron-compiler": "^1.0.0-beta.0",
    "chiron-core": "^1.0.0-beta.0",
    "napajs": "^0.2.3",
    "webpack-serve": "^2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.56",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0-beta.56",
    "@babel/preset-env": "^7.0.0-beta.56",
    "@babel/preset-typescript": "^7.0.0-beta.56",
    "@types/cross-spawn": "^6.0.0",
    "@types/del": "^3.0.1",
    "@types/inquirer": "^0.0.42",
    "@types/jest": "^23.3.1",
    "@types/node": "8.x",
    "@types/node-fetch": "^2.1.2",
    "@types/rimraf": "^2.0.2",
    "@types/semver": "^5.5.0",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.4.2",
    "chalk": "^2.4.1",
    "cross-env": "^5.2.0",
    "cross-spawn": "^6.0.5",
    "inquirer": "^6.0.0",
    "jest": "^23.4.2",
    "jest-spec-reporter": "^1.0.4",
    "node-fetch": "^2.2.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.63.4",
    "rollup-plugin-babel": "^4.0.0-beta.7",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "sade": "^1.4.1",
    "semver": "^5.5.0",
    "typescript": "^3.0.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8.0.0"
          },
          "modules": false
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import"
    ],
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env"
        ]
      }
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "testRegex": "(src/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.tsx?$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.spec.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "reporters": [
      "default",
      "jest-spec-reporter"
    ]
  }
}
