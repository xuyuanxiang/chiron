{
  "name": "chiron-web-compat",
  "version": "1.0.0-beta.0",
  "license": "MIT",
  "main": "lib/index.umd.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development BABEL_ENV=development webpack",
    "test": "cross-env NODE_ENV=test BABEL_ENV=test jest -u",
    "build": "cross-env NODE_ENV=production BABEL_ENV=production webpack --progress && tsc --emitDeclarationOnly"
  },
  "dependencies": {
    "preact": "^8.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-rc.1",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "@babel/preset-react": "^7.0.0-rc.1",
    "@babel/preset-typescript": "^7.0.0-rc.1",
    "@types/node": "8.x",
    "@types/webpack": "^4.4.9",
    "babel-core": "^7.0.0-0",
    "babel-loader": "^8.0.0-beta.4",
    "clean-webpack-plugin": "^0.1.19",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "file-loader": "^1.1.11",
    "less": "^3.8.0",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.4.1",
    "postcss-loader": "^2.1.6",
    "postcss-preset-env": "^5.3.0",
    "postcss-px2rem": "^0.3.0",
    "style-loader": "^0.21.0",
    "typescript": "^3.0.1",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.5",
    "webpack-command": "^0.4.1"
  },
  "browserslist": [
    "> 0.5 in CN"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import"
    ],
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "8.0.0"
              }
            }
          ]
        ]
      }
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node",
      "less",
      "scss",
      "css"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "./scripts/jest-setup.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>../../node_modules/jest-enzyme/lib/index.js",
    "testEnvironment": "node",
    "testRegex": "(src/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "\\.(jpe?g|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|ico)$": "<rootDir>/scripts/jest-file-transformer.js",
      "^.+\\.tsx?$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.spec.{ts,tsx}",
      "!src/*/style/*.d.ts"
    ],
    "reporters": [
      "default",
      "jest-spec-reporter"
    ]
  }
}
